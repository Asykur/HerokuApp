<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:id="@+id/imgItems"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemCreated"
                android:textSize="12sp"
                tools:text="Created : 12/12/2019"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemDesc"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textSize="16sp"
                tools:text="This is just simple description, lorem ipsum dolor sit amet, his is just simple description, lorem ipsum dolor sit amet lorem ipsum..."
                android:ellipsize="end"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>